<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:GraphVisualizer"
            x:Class="GraphVisualizer.Vertex"
            MouseMove="Vertex_MouseMove"
            AllowDrop="True">
    <Grid Height="50px" Width="50px">
        <Ellipse x:Name="VertexObject" Height="50px" Width="50px" StrokeThickness="1" Stroke="Black" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="VertexName" Height="14" Width="38" Canvas.Left="15" Canvas.Top="17" Text="{Binding Path=Order, Mode=OneTime}" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
