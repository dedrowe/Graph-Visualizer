<UserControl x:Class="GraphVisualizer.Edge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphVisualizer"
             mc:Ignorable="d"
             d:DesignHeight="1" d:DesignWidth="1">
    <Canvas Name="EdgeCanvas">
        <Line Name="EdgeLine" Stroke="Black" StrokeThickness="2" Panel.ZIndex="-1"></Line>
        <Line Name="ArrowHead1" Stroke="Black" StrokeThickness="2" Panel.ZIndex="-1"></Line>
        <Line Name="ArrowHead2" Stroke="Black" StrokeThickness="2" Panel.ZIndex="-1"></Line>
        <Label Name="EdgeWeight" Foreground="Orange" Background="White"/>
    </Canvas>
</UserControl>
